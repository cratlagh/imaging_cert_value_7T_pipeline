#!/bin/bash
#
## Written by K. Garner - rename a specific subject's files to be BIDS compliant

set -e # this command causes the script to exit on error

####################################################################################################
#### Defining pathways
####################################################################################################
datloc=/clusterdata/uqkgarn1/scratch

####################################################################################################

####################################################################################################
#### Defining sub data
####################################################################################################
subs=(2)
runs=(3)

####################################################################################################
#### rename files
####################################################################################################
for sub in "${subjs[@]}"; do
    
    for run in "${runs[@]}"; do
        c_name=$(find ${datloc}/ -name "sub-0${sub}_*_run0${run}.nii")
        nu_name=$(printf ${datloc}/sub-0${sub}_ses-02_task-attlearn_run0${run}.nii)
        mv c_name nu_name
    done
done
